<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.ChatFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/first"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/title">



                <TextView
                    android:id="@+id/job_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="House Help Needed"
                    android:textColor="@color/black"
                    android:textSize="21dp"
                    android:visibility="visible" />
            </LinearLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/title"
                android:id="@+id/mid">


                <TextView
                    android:id="@+id/job_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/job_payment"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="150dp"
                    android:drawableStart="@drawable/ic_baseline_location_on_24"
                    android:drawablePadding="10dp"
                    android:gravity="left"
                    android:text="Lalpur Chowk"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/job_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@drawable/ic_baseline_star_rate_24"
                    android:text="Give Ratings"
                    android:textColor="#fff"/>

            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/mid"
                android:id="@+id/feedback"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Feedback Given"
                    android:textColor="@color/bluish_grey"

                    />
                <TextView
                    android:id="@+id/job_details"
                    android:layout_width="match_parent"
                    android:layout_marginTop="25dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/desshape"
                    android:layout_alignTop="@+id/desc"
                    android:text="Puntual and well-behaved.Satistied with the work!"
                    />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/purple_200"
                android:layout_marginTop="15dp"
                android:layout_below="@id/feedback"
                android:padding="16dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sec"
            android:layout_below="@+id/first"
            android:layout_marginTop="15dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/title2">



                <TextView
                    android:id="@+id/job_title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Assisting in shop work"
                    android:textColor="@color/black"
                    android:textSize="21dp"
                    android:visibility="visible" />
            </LinearLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/title2"
                android:id="@+id/mid2">


                <TextView
                    android:id="@+id/job_location2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/job_payment2"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="150dp"
                    android:drawableStart="@drawable/ic_baseline_location_on_24"
                    android:drawablePadding="10dp"
                    android:gravity="left"
                    android:text="Kanke Road"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/job_payment2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@drawable/ic_baseline_star_rate_24"
                    android:text="4 Given"
                    android:textColor="#fff"/>

            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/mid2"
                android:id="@+id/feedback2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/desc2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wanna Give Feedback?"
                    android:textColor="@color/bluish_grey"

                    />
                <TextView
                    android:id="@+id/job_details2"
                    android:layout_width="match_parent"
                    android:layout_marginTop="25dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/desshape"
                    android:layout_alignTop="@+id/desc2"
                    android:text="Enter Feedback"
                    />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/purple_200"
                android:layout_marginTop="15dp"
                android:layout_below="@id/feedback2"
                android:padding="16dp" />
        </RelativeLayout>











    </RelativeLayout>
    </ScrollView>

</FrameLayout>
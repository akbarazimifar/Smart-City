<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/job_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_back">

        <TextView
            android:id="@+id/job_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_marginTop="@dimen/top_margin"
            android:text="Teach my Std. 5 kid"
            android:textColor="@color/OnSecondary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/job_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_marginTop="@dimen/top_margin"
            android:layout_toRightOf="@+id/job_name"
            android:textSize="12sp"
            android:text="Deadline: Mar 28, 20:00" />


        <LinearLayout
            android:id="@+id/aboveline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/job_deadline"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:weightSum="1"
        >

            <TextView
                android:id="@+id/job_details"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="1dp"
                android:gravity="left"
                android:layout_gravity="left"
                android:textSize="12sp"
                android:layout_weight="0.6"
                android:text="The job is to teach my child who is in Std. 5 for his exams. Duration will be 2 weeks. Subjects - English, Hindi, Science"
                android:textColor="@color/OnSecondary" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aboveline"
                android:layout_marginRight="5dp"
                android:layout_gravity="right"
                android:gravity="right"
            >
                <TextView
                    android:id="@+id/job_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/job_details"
                    android:layout_toRightOf="@+id/job_details"
                    android:drawableLeft="@drawable/ic_rupee"
                    android:background="@drawable/money"
                    android:text="Rs. 8000"
                    android:textColor="#ffffff" />

            </LinearLayout>




        </LinearLayout>



